.new-user-top
  .new-user-top__container

    -# ヘッダー部分
    = render "shared/header"
    
    -# メイン部分
    %main.new-user-top-main
      %section.new-user-top-main__container
        %h2.new-user-top-main__container__logo
          新規会員登録
        .new-user-top-main__container__inners
          .new-user-top-main__container__inners__inner
            = link_to  new_user_registration_path, class: "new-user-top-main__container__inners__inner--btn-mail" do
              %i.fa.fa-envelope
              メールアドレスで登録する
            %button.new-user-top-main__container__inners__inner__btn-sns
              %i.fab.fa-facebook-square
              Facebookで登録する
            %button.new-user-top-main__container__inners__inner__btn-sns-google
              = image_tag "googleLogo.jpg"
              Googleで登録する
    
    -# フッター部分
    = render 'shared/footer'