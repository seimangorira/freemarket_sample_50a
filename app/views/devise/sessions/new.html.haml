.login-page
  .login-page__body
    .login-page__container.new-user-top-container
      .login-page__single-container
        -# ヘッダー部分
        = render "shared/header"

        %main.login-page__single-main
          .login-page__login-panel
            .login-page__login-no-account
              .login-page__login-no-account--p
                アカウントをお持ちでない方はこちら
              = link_to signup_registration_path, class: "login-page__login-no-account--a" do
                新規会員登録
            .new-user-top-main__container__inners{style: :"padding-bottom: 32px;"}
              .new-user-top-main__container__inners__inner
                %button.new-user-top-main__container__inners__inner__btn-sns{style: :"border-radius: 0;"}
                  = link_to user_facebook_omniauth_authorize_path, class: "new-user-top-main__container__inners__inner__btn-sns__link", method: :post do
                    %i.fab.fa-facebook-square
                    Facebookでログインする
                %button.new-user-top-main__container__inners__inner__btn-sns-google{style: :"border-radius: 0;"}
                  = link_to user_google_oauth2_omniauth_authorize_path, class: "new-user-top-main__container__inners__inner__btn-sns-google__link", method: :post do
                    = image_tag "googleLogo.jpg"
                    Googleでログインする

            %form
            = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
              .login-page__form-inner
                .login-page__form-inner__group
                  = f.email_field :email, autofocus: true, type: "email", placeholder: "メールアドレス", class: 'login-page__form-inner__group--input'
                .login-page__form-inner__group
                  = f.password_field :password, type: "password", placeholder: "パスワード", class: 'login-page__form-inner__group--input'

                .login-page__form-inner__group
                  = render "shared/recaptcha"

                %button.login-page__btn-red ログイン
                = link_to "パスワードをお忘れの方", class: "login-page__login-panel--a" do
                  パスワードをお忘れの方
        = render "shared/footer"