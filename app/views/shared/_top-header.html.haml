.top-header
  .top-header-inner
    .top-header-top
      %h1
        %a{:href => "https://www.mercari.com/jp/"}
          %img{:alt => "mercari", :height => "36", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2843909100", :width => "134"}/
      %form.top-header-form{:action => "https://www.mercari.com/jp/search/"}
        %input.input-default{:name => "keyword", :placeholder => "何かお探しですか？", :type => "search", :value => ""}/
        %i.icon-search
    .top-header-nav-box.clearfix
      %nav.l-left
        %ul.top-header-nav
          %li
            %h2
              %a.top-header-nav-root.list-parent{:href => "https://www.mercari.com/jp/category/"}
                %i.icon-list.top-header-cat-brand-icon
                %span カテゴリーから探す
          %li
            %h2
              %a.top-header-nav-root.list-parent{:href => "https://www.mercari.com/jp/brand/"}
                %i.icon-tag.top-header-cat-brand-icon
                %span ブランドから探す
      .l-right
        %ul.top-header-login-nav
          %li
            %a.sp-header-btn.btn-red{:href => "https://www.mercari.com/jp/signup/"} 新規会員登録
          %li
            %a.sp-header-btn.header-login{:href => "https://www.mercari.com/jp/login/?login_callback=https%3A%2F%2Fwww.mercari.com%2Fjp%2F"} ログイン
